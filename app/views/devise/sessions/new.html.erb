<div class="container">
  <div class="d-flex justify-content-center h-100">
		<div class="card border border-dark">
			<div class="d-flex justify-content-center mt-4 ">
				<p><strong>Loguearse</strong></p>
			</div>
			<div class="card-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="input-group form-group">
           				<%= f.text_field :username, autofocus: true, class:"form-control",  placeholder:"Usuario" %>				
					</div>
					<div class="input-group form-group">
            			<%= f.password_field :password, autocomplete: "current-password" ,class:"form-control" , placeholder:"ContraseÃ±a" %>
					</div>
					<div class="form-group form-check">
						<% if devise_mapping.rememberable? %>
							<%= f.check_box :remember_me, class:"form-check-input" , id:"exampleCheck" %>
							<%= f.label :remember_me, "Recordarme",class:"form-check-label", for:"exampleCheck1" %>
						<% end %>
          			</div>
					<div class="d-flex justify-content-center">
						<%= f.submit "Ingresar", class:"btn btn-success btn-sm btn-block" %>
					</div>
				<% end %>
			</div>
		</div>
</div>



