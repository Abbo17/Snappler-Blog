<div class="cotainer ml-2">
    <%= form_for @slider , url: admin_sliders_path(@slider) do |f| %>
        <div class="form-group row">
            <%= f.label :name, "Nombre: ", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-4">
                <%= f.text_field :name,class: "form-control" , placeholder: "Escriba el nombre del slider", required:true  %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :name, "Imagen: ", class:"col-sm-3 col-form-label"%>
            <div class="col-sm-4">
               <%= f.file_field :image, required:true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-10">
                <%= f.submit "Nuevo Slider", class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
    <% if @error.present? %>
        <p class="alert alert-danger"><%= @error %></p>
    <% end %>
</div>