<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <% @sliders.each.with_index(0) do |slider, index| %>
            <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                <%= image_tag(slider.image, class: 'd-block w-100 img-fluid') %>
            </div>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br>
<div class="container-fluid">
    <div class="row">
        <% @products.first(4).each do |product| %>
            <div class="col-sm-3">
                <div class="card" style="width: 18rem;">
                    <% imageActive = product.imageActive %>
                    <% product.images.each do |image| %>
                        <% if product.imageActive == image.id %>
                            <%= image_tag(url_for(image),class: 'card-img-top' , alt:"") %>
                        <% end %>
                    <% end %>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name%></h5>
                        <p class="card-text"><%= product.price %></p>
                        <a href="#" class="btn btn-primary">Ver</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>